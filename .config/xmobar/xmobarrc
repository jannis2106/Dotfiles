Config { 
   -- appearance
     font =         "xft:Mononoki Nerd Font:size=11:bold:antialias=true"
   , bgColor =      "#191919"
   , fgColor =      "#f2f2f2"
   , position =     Static { xpos = 10, ypos = 10, width = 1900, height = 35 }
   , alpha = 240

   -- layout
   , sepChar =  "%"   -- delineator between plugin names and straight text
   , alignSep = "}{"  -- separator between left-right alignment
   , template = "%UnsafeStdinReader% %mpris2% }{ %EDDV% | %default:Master% | %battery% | %bright% | %date%"

   -- general behavior
   , lowerOnStart =     False    -- send to bottom of window stack on start
   , hideOnStart =      False   -- start with window unmapped (hidden)
   , allDesktops =      True    -- show on all desktops
   , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
   , pickBroadest =     False   -- choose widest display (multi-monitor)
   , persistent =       True    -- enable/disable hiding (True = disabled)

   -- plugins
   , commands = [
        -- Spotify
        Run Mpris2 "spotify" ["-t", "\xf1bc <artist> - <title>"] 10

        -- Weather
        , Run WeatherX "EDDV" [ 
             ("clear", "\xe30d")
           , ("sunny", "\xe30d")
           , ("mostly clear", "\xe30d")
           , ("mostly sunny", "\xe30d")
           , ("partly sunny", "\xe30c")
           , ("fair", "\xe30d")
           , ("cloudy","\xe312")
           , ("overcast","\xe33d")
           , ("partly cloudy", "\xe302")
           , ("mostly cloudy", "\xe318")
           , ("considerable cloudiness", "\xe312")] 
           [ "-t", "<skyConditionS> <tempC>Â°C" ] 36000
            
        -- Volume
        , Run Volume "default" "Master"
            [ "-t", "<status>", "--"
            , "--on", "<fc=#f2f2f2>\xf028</fc> <volume>%"
            , "--onc", "#f2f2f2"
            , "--off", "<fc=#e95678>\xf026</fc> <volume>%"
            , "--offc", "#f2f2f2"
            ] 1

        -- Battery
        , Run Battery [ "--template" , "<acstatus>"
                      , "--" -- battery specific options
                          -- discharging
                          , "-o", "\xf578 <left>%"
                          -- charging
                          , "-O", "\xf583 <left>%"
                          -- charged
                          , "-i", "<fc=#29d398>\xf58e</fc> <left>%"
                             ] 50
        
        -- Brightness
        , Run Brightness [ "-t", "\xfbe6 <percent>%", "--", "-D", "intel_backlight" ] 1

        -- Date
        , Run Date "\xf133 %d %b %H:%M" "date" 10

        , Run UnsafeStdinReader
    ]
}
